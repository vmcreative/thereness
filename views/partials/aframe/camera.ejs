<!-- camera -->
<a-entity id="camera" camera="userHeight: 1.6" look-controls>
  <a-cursor id="cursor" color="#bbe0ea" opacity="0.8" fuse="true" fuseTimeout="700">
    <a-animation
      begin="cursor-fusing"
      easing="ease-in"
      attribute="color"
      from="#bbe0ea" to="#ef5350"
      dur="1500">
    </a-animation>
    <a-animation
      begin="click"
      attribute="color"
      to="#bbe0ea"
      dur="0">
    </a-animation>
    <a-animation
      begin="mouseleave"
      attribute="color"
      to="#bbe0ea"
      dur="0">
    </a-animation>
  </a-cursor>
</a-entity>