menuArray = function(list){
    var n = list.length,
    d = n/5,
    row = [],
    row1, row2, row3;

    switch(true) {
      case (d <= 1):
        row1 = {
          num:      n,
          angle:    30,
          rotation: 15*(n-1),
          radius:   2,
          position: -1
        };
        row.push(row1);
        break;
      case (d <= 2 && d > 1):
        row1 = {
          num:      5,
          angle:    26,
          rotation: 52,
          radius:   2.5,
          position: 0
        };
        row2 = {
          num:      n-5,
          angle:    30,
          rotation: 15*(n-6),
          radius:   2,
          position: -1
        };
        row.push(row1, row2);
        break;
      case (d <= 3 && d > 2):
        row1 = {
          num:      5,
          angle:    22,
          rotation: 44,
          radius:   3,
          position: 1
        };
        row2 = {
          num:      5,
          angle:    26,
          rotation: 52,
          radius:   2.5,
          position: 0
        };
        row3 = {
          num:      n-10,
          angle:    30,
          rotation: 15*(n-11),
          radius:   2,
          position: -1
        };
        row.push(row1, row2, row3);
        break;
      default:
        console.log("outside range");
        break;
    }
    return row;
};
